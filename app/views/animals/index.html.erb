<h1>Animals</h1>

<table>
  <thead>
    <tr>
      <th>animal</th>
      <th>client</th>
      <th>categorie</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @animals.each do |animal| %>
      <tr>
        <td><%= link_to animal.name, animal_path(animal) %></td>
        <td><%= link_to animal.client.name, client_path(animal.client) %></td>
        <td><%= animal.categorie %></td>
        <td><%= link_to 'Edit', edit_animal_path(animal) %></td>
        <td><%= link_to 'Destroy', animal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

